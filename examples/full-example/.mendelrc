
outdir: ./build
bundlesoutdir: client
serveroutdir: server

base: base
basetree: isomorphic/base
bundles:
  # vendor:
  #   require:
  #     - react
  #     - react-dom
  main:
    entries:
      - main.js
    require:
      - ./isomorphic/base/components/button.js
    external:
      - react
      - react-dom
      - ./isomorphic/base/components/lazy.js
    transform:
      - babelify
    plugin:
      -
        - mendel-extractify
        - extract:
          - outfile: build/client/base/lazy.js
            entries:
              - isomorphic/base/components/lazy.js
