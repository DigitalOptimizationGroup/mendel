
outdir: ./build
bundlesoutdir: client
serveroutdir: server

base: base
basetree: isomorphic/base
bundles:
  vendor:
    require: &vendor_list
      - react
      - react-dom
  main:
    entries:
      - main.js
    external: *vendor_list
    transform:
      - babelify
    plugin:
      -
        - extractify
        - lazy:
            - outfile: ./build/client/base/lazy.js
              entries:
              - ./isomorphic/base/components/lazy.js
  # WARNING: This temporary bundle is not part of the example
  #          The dev team needs this here for a while in order to
  #          do some work in parallel branches
  lazy:
    entries:
      - components/lazy.js
    external: *vendor_list
    transform:
      - babelify
  # END WARNING

variationsdir: isomorphic/variations
variations:
  unexisting_folder:
  bucket_A:
    - unexisting_folder
  feature_B:
  partner_C:
  bucket_D:
    - partner_C

