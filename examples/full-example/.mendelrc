
outdir: ./build
bundlesoutdir: client
serveroutdir: server

base: base
basetree: isomorphic/base
bundles:
  vendor:
    require: &vendor_list
      - react
      - react-dom
  main:
    entries:
      - main.js
    external: *vendor_list
    transform:
      - babelify
  # WARNING: This temporary bundle is not part of the example
  #          The dev team needs this here for a while in order to
  #          do some work in parallel
  temporary:
    entries:
      - components/lazy.js
    external: *vendor_list
    transform:
      - babelify
  # END WARNING.

variationsdir: isomorphic/variations
variations:
  unexisting_folder:
  bucket_A:
    - unexisting_folder
  feature_B:
  partner_C:
  bucket_D:
    - partner_C

